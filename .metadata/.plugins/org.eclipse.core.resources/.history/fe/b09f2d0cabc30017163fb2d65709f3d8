
public class Coche {
	
	private String color;
	private String brand;
	private int topSpeed;
	private String type;

/*Constructor*/	public Coche (String color, String brand, int topSpeed, String type){
					this.color = color;
					this.brand = brand;
					this.topSpeed = topSpeed;
					this.type = type;
				}		
	
	public void sayColor(){
		System.out.println("El coche es de color: " + color);
	}
	
	public void sayColor(String color){//Método sobrecargado
		setColor(color);		
	}
	
	public String toString(){
		return "El color del coche es: " + this.color;
	}

	public String getColor() {
		return color;
	}
	
	public void setColor(String color) {
		
		if(color.equals("rojo") || color.equals("azul") || color.equals("amarillo")){
			this.color = color;
			sayColor(color);
		}else{
			System.out.println("Color no válido");
		}		
		
	}
	
	public String getBrand() {
		return brand;
	}

	public void setBrand(String brand) {
		this.brand = brand;
	}

	public int getTopSpeed() {
		return topSpeed;
	}

	public void setTopSpeed(int topSpeed) {
		this.topSpeed = topSpeed;
	}

	public String getType() {
		return type;
	}

	public void setType(String type) {
		this.type = type;
	}
	
}
